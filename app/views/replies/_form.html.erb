<%= simple_form_for [@post, Reply.new] do |f| %>
<%= f.error_notification %>
<div class="columns is-centered">
  <div class="column is-half">

    <div class="field">
      <div class="control">
        <%= f.text_area :text, class: "textarea", placeholder: "Add a comment", :required => true%>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.button :submit, class:"button is-primary" %>
      </div>
    </div>
  </div>
</div>

<% end %>
