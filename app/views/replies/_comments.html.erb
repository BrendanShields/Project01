<h3>Comments</h3>

<%= commentable.replies.each do |reply| %>
<article class="media">
  <figure class="media-left">
    <p class="post is-64x64">
      <img src="https://bulma.io/posts/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <small><%= User.first.name %></small>
        <small><%= @post.created_at %></small>
        <br>
        <br>

        <div>
          <%= reply.text %>
        </div>
      </p>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
        <div class="buttons has-addons">
          <%= link_to 'Edit', edit_post_path(reply), class: "button" %>
          <%= link_to 'Delete', post_path, class: "button", method: :delete, data: { confirm: 'Are you sure you want to delete this post?'} %>
        </div>
      </div>
    </nav>
  </div>
  <div class="media-right">
    <button class="delete"></button>
  </div>
</article>
<% end %>
