
    <section class="section">
      <div class="container">
      <h1 class="title">Images</h1>
      <div class="mason">

      <% @images.each do |image| %>

      <div class="grid-it">
        <div class="card">
        <div class="card-image">
      <figure class="image is-128by128">
        <a href="/images/<%= image.id %>">
      <img src="<%= image.user_image.thumb %>" alt="Placeholder image">
        </a>
      </figure>
      </div>
        <div class="card-content">
                  <div class="media">

                    <div class="media-left">
                      <figure class="image is-48x48">
                        <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                      </figure>
                    </div>
                    <div class="media-content">
                      <p class="tit"><%= image.user.name %></p>
                      <p class="sub">Photographer</p>
                    </div>
                    </div>
                    <div class="content">
                    <%= image.description.truncate(50) %><a>@bulmaio</a>.
                    <a href="#">#css</a> <a href="#">#responsive</a>
                    <br>
                    <time datetime="2016-1-1"><%= image.created_at %></time>

                    <i class="far fa-eye"></i>
                    <%= image.impressionist_count %>
                    </div>
                    </div>
        </div>











      </div>

      <% end %>

</div>
      </div> <!-- /grid container -->
    </section>
