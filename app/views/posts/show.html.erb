<div class="hero-body">
  <div class="container has-text-centered">
    <article class="media">
      <figure class="media-left">
        <p class="post is-64x64">
          <img src="https://bulma.io/posts/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <h3><%= @post.title %></h3><hr>
            <small><%= User.first.name %></small>
            <small><%= @post.created_at %></small>
            <br>
            <br>

            <div>
              <%= @post.description %>
            </div>
          </p>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <div class="buttons has-addons">
              <%= link_to 'Edit', edit_post_path(@post), class: "button" %>
              <%= link_to 'Delete', post_path, class: "button", method: :delete, data: { confirm: 'Are you sure you want to delete this post?'} %>
            </div>
          </div>
        </nav>
      </div>
      <div class="media-right">
        <button class="delete"></button>
      </div>
    </article>

    <%= @post.replies.each do |reply| %>
    <article class="media">
      <figure class="media-left">
        <p class="post is-64x64">
          <img src="https://bulma.io/posts/placeholders/128x128.png">
        </p>
      </figure>
      <div class="media-content">
        <div class="content">
          <p>
            <small><%= User.first.name %></small>
            <small><%= @post.created_at %></small>
            <br>
            <br>

            <div>
              <%= reply.text %>
            </div>
          </p>
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <div class="buttons has-addons">
            
            </div>
          </div>
        </nav>
      </div>
      <div class="media-right">
        <button class="delete"></button>
      </div>
    </article>

<% end %>

	<%= render 'replyform', reply: @reply %>

  </div>
</div>
