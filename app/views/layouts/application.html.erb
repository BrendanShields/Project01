<!DOCTYPE html>
<html>
  <head>
    <title>TfpApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <section class="hero is-success is-fullheight">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
      <header class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <a class="navbar-item">
            <h2 class="title is-2">Time For Print</h2>
            </a>
            <span class="navbar-burger burger" data-target="navbarMenuHeroC">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </div>
          <div id="navbarMenuHeroC" class="navbar-menu">
            <div class="navbar-end">
              <a href="<%= root_path %>"class="navbar-item is-active">
                Home
              </a>
              <a href="<%= images_path %>" class="navbar-item">
                Images
              </a>

              <% if user_signed_in? %>
              <a href="<%=new_image_path %>"class="navbar-item">
              New Image
              </a>
              <a href="<%= edit_user_registration_path %>"class="navbar-item">
              <%= current_user.name %>
              </a>
              <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"button is-success is-inverted"%>

              <% else %>

              <a href="<%= new_user_registration_path %>"class="navbar-item">
              Sign Up
              </a>

              <%= link_to "Sign In", new_user_session_path, class:"button is-success is-inverted"%>

              <% end %>

              </span>
            </div>
          </div>
        </div>
      </header>
    </div>



  <body>

<!-- For devise -->
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>


    <%= yield %>
  </body>
</html>
